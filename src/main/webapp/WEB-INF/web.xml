
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         version="2.5" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"> 
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
  <param-name>user</param-name>
  <param-value>root</param-value>
  </context-param>
  <context-param>
  <param-name>password</param-name>
  <param-value>oleg</param-value> 
  </context-param>
 
  <listener>
  <listener-class>user.User</listener-class>
  </listener>
 <listener>
 <listener-class>listeners.UserAttributeListener</listener-class>
 </listener>
  <listener>
  <listener-class>listeners.ConnectionListener</listener-class>
  </listener>
  
  <servlet>
  	<description>login work</description>
  	<display-name>LoginSerlet</display-name>
  	<servlet-name>LoginSerlet</servlet-name>
  	<servlet-class>servlets.LoginSerlet</servlet-class>
  </servlet>
  <servlet>
  	<description>user image</description>
  	<display-name>ImageSerlet</display-name>
  	<servlet-name>ImageSerlet</servlet-name>
  	<servlet-class>servlets.ImageSerlet</servlet-class>
  </servlet>
  <servlet>
  	<description>registration work</description>
  	<display-name>RegistrationServlet</display-name>
  	<servlet-name>RegistrationServlet</servlet-name>
  	<servlet-class>servlets.RegistrationServlet</servlet-class>
  </servlet>
  <servlet>
  	<description>write steam bytes to response</description>
  	<display-name>ImageStreamServlet</display-name>
  	<servlet-name>ImageStreamServlet</servlet-name>
  	<servlet-class>servlets.ImageStreamServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginSerlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>RegistrationServlet</servlet-name>
  	<url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ImageStreamServlet</servlet-name>
  	<url-pattern>/image</url-pattern>
  </servlet-mapping>
  
 
</web-app>
